.controls
	display: flex;
	flex: 1;
	
	.sidebar-toggle,
	.stream-toggle
		cursor: pointer;
		padding: 0 padding;

	.sidebar-toggle
		font-size: 26px;
		display: none;
		border-right: border;
		
		+below(3)
			display: block;
		
	.stream-toggle
		padding: 0;
		display flex;
		
		+below(3)
			padding: 0;
				
		select
			min-width: 140px;
			border: none;
			background: #FFF;
			padding-left: 20px;
			text-align: left;
			outline: none;
			cursor: pointer;
			
			+below(3)
				width: 100%;
				border: none;
				float: left;
		
		&:after 
			content: '\f123';
			font-family: 'ionicons';
			font-size: 12px;
			text-align: center;
			color: #BBB;
			background: #FFF;
			width: 35px;
			pointer-events: none;
			border-right: 1px solid #DDD;
			margin-left: -35px;
			
			+below(3)
				height: 54px;
				margin-top: 0;
				border: none;

		+below(3)
			text-align: center;
			flex: 1;
			border: none;
	
.login
